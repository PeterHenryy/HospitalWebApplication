	<!-- Single News -->
	<section class="news-single section">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-12">
					<div class="row">
						<div class="col-12">
							<div class="single-main">
								<div class="news-head">

									<div class="login-form-container container">
										<h2 style="text-align: center;margin-bottom: 25px;">Update Profile</h2>
										<form asp-controller="Doctor" asp-action="EditDoctorProfile" enctype="multipart/form-data">

											<div class="form-row">
												<div class="form-group col-md-6">
													<label for="inputEmail4">FirstName</label>
													<input type="text" class="form-control" placeholder="FirstName" asp-for="@Model.AppUser.FirstName">
												</div>
												<div class="form-group col-md-6">
													<label for="inputPassword4">LastName</label>
													<input type="text" class="form-control" placeholder="LastName" asp-for="@Model.AppUser.LastName">
												</div>
											</div>
											<div class="form-group">
												<label for="inputAddress2">Password</label>
												<input type="password" class="form-control" placeholder="Password" asp-for="@Model.AppUser.Password">
											</div>
											<div class="form-group">
												<label for="inputAddress2">Phone Number</label>
												<input type="text" class="form-control" placeholder="Phone Number" asp-for="@Model.AppUser.PhoneNumber">
											</div>
											<div class="form-group ">
												<label for="inputAddress2">Profile Picture</label>
												<img style="height: 50px;width: 50px; border-radius: 50%" src="~/profilepics/@Model.AppUser.ProfilePicture" />
												<input type="file" class="form-control" placeholder="Profile Picture" asp-for="@Model.AppUser.ProfilePicture">
											</div>
											<div class="form-group">
												<label for="inputAddress2">UserName</label>
												<input type="text" class="form-control" placeholder="UserName" asp-for="@Model.AppUser.UserName">
											</div>
											<div class="form-group">
												<label for="inputAddress2">Email</label>
												<input type="text" class="form-control" placeholder="Email" asp-for="@Model.AppUser.Email">
											</div>

											@*--------------------------------------Doctor Bio ---------------------------------------------------------------*@
											<input type="text" hidden class="form-control" placeholder="Bio" value="@Model.Doctor.ID" asp-for="@Model.Doctor.ID">

											<div class="form-group">
												<label for="inputAddress2">Bio</label>
												<input type="text" class="form-control" placeholder="@Model.Doctor.Bio" asp-for="@Model.Doctor.Bio">
											</div>
											<button type="submit" style="width: 100%; background-color: rgb(92, 155, 217);" class="btn btn-primary">Update</button>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
